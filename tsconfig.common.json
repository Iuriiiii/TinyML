{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./common",
    "declaration": true,
    "declarationDir": "./common",
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "index.ts"
  ]
}